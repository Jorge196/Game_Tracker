<h1>Games</h1>
<nav> 
    <a href="/games/new">New Game</a>
</nav>

<div>
<table>
    <style>
    table, th, td { border: 1px solid blue;
    background-color: #0ac241}
      th {width: 140px}
      td {width: 150px}
    </style>
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Year</th>
    </tr>
    <% @games.each do |game| %>
        <tr>
            <td><%= game.title %></td>
            <td><%= game.genre %></td>
            <td><%= game.release_year %></td>
        </tr>
    <%end%> 
</table> 
</div>
